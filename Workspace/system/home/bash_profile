# bash
alias sh="bash"

# paths
alias c="cd"
alias dir="dir --color=auto"
alias vdir="vdir --color=auto"

# ls
alias ll="ls -Gl"
alias la="ll -Ga"
alias lh="ll -h"
alias l="ls -Gl"
alias ls="ls -G"

# vim
alias v="vim"
alias vi="vim"

# grep
alias grep="grep --color=auto"
